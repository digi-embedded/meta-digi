+{
+	struct mca_drv *mca = dev_get_drvdata(dev);
+
+	if (!mca) {
+		dev_err(dev, " mca was null in %s\n", __func__);
+		return -ENODEV;
+	}
+
+	/* Set the suspend bit in PWR_CTRL_0 */
