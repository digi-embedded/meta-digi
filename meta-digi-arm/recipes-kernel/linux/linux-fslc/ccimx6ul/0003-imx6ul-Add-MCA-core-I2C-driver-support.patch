+
+	if (!mca->chip_irq) {
+		dev_err(mca->dev, "No IRQ configured\n");
+		return -EINVAL;
+	}
+
+	mca->irq_base = -1;
+	ret = regmap_add_irq_chip(mca->regmap, mca->chip_irq,
