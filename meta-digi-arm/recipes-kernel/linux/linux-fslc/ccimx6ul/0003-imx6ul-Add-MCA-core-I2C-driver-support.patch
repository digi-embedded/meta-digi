+		return -ENODEV;
+
+	if (unlikely(off >= MCA_CC6UL_NVRAM_SIZE))
+		return -EFBIG;
+	if ((off + count) > MCA_CC6UL_NVRAM_SIZE)
+		count = MCA_CC6UL_NVRAM_SIZE - off;
+	if (unlikely(!count))
+		return count;
+
+	ret = regmap_bulk_write(mca->regmap,
+				MCA_CC6UL_MPU_NVRAM_START + off, buf, count);
+	if (ret) {
